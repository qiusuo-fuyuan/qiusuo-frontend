{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ],
    "target": "es6",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "AppComponents/*": [
        "./src/components/*"
      ],
      "Assets": [
        "./src/assets"
      ],
      "Generated/*": [
        "./src/__generated/*"
      ],
      "@sdk/*": [
        "./src/@sdk/*"
      ],
      "Lib/*": [
        "./src/lib/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "./webpack.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ] // *** The files to not type check,why since src is specified***
}